<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView 
        android:textAppearance="?android:textAppearanceLarge" 
        android:textStyle="bold" 
        android:textColor="#000000"
        android:gravity="center" 
        android:id="@+id/textViewTitle" 
        android:background="@drawable/shadow_banner" 
        android:padding="5.0dip" 
        android:visibility="gone"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="Title" />
    
    <TextView 
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic"
        android:id="@+id/textViewMsg"
        android:padding="10.0dip" 
        android:visibility="visible"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Message" 
        android:layout_below="@+id/tutorialLayout"
        android:layout_centerHorizontal="true" />
    
	<LinearLayout 
	    android:orientation="vertical" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_below="@+id/textViewMsg">

		
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="bottom" >
	
	        <Button
	            android:id="@+id/button1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="3dp"
	            android:layout_weight="1"
	            android:background="@drawable/button_menu"
	            android:text="Button"
	            android:visibility="gone"
				android:layout_gravity="center" />
	
	        <Button
	            android:id="@+id/button2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="3dp"
	            android:layout_weight="1"
	            android:background="@drawable/button_menu"
	            android:text="Button"
	            android:visibility="gone"
				android:layout_gravity="center" />
	
	        <Button
	            android:id="@+id/button3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="3dp"
	            android:layout_weight="1"
	            android:background="@drawable/button_menu"
	            android:text="1"
	            android:visibility="gone"
				android:layout_gravity="center" />
	
	        <ImageButton
	            android:id="@+id/imageButton1"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:src="@drawable/bt1device"
	            android:visibility="gone" />
	
	        <ImageButton
	            android:id="@+id/imageButton2"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:src="@drawable/bt2device"
	            android:visibility="gone" />
	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textViewTitle"
		android:layout_centerHorizontal="true"
		android:id="@+id/tutorialLayout"
		android:visibility="gone">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/press_to_clear"
                android:id="@+id/textView5"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:gravity="right" />

			<ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:id="@+id/imageView10"
				android:src="@drawable/btnclr"
				android:background="@drawable/button2_menu"
				android:scaleType="fitCenter"
				android:layout_margin="5dp" />
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/press_to_skip"
				android:id="@+id/textView7"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:gravity="right" />

			<ImageView
				android:layout_width="50dp"
				android:layout_height="45dp"
				android:id="@+id/imageView11"
				android:src="@drawable/btnpass"
				android:background="@drawable/button2_menu"
				android:scaleType="fitCenter"
				android:layout_margin="5dp" />
		</LinearLayout>

	</LinearLayout>
</RelativeLayout>
