<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lines_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Your Progress Chart"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewDays7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="7 Days"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#555555"
            android:textStyle="italic" />

        <com.blackstar.math4brain.TrackProgressView
            android:id="@+id/trackProgressView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/shadow_banner" />

        <TextView
            android:id="@+id/textViewDays30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="30 Days "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#555555"
            android:textStyle="italic" />

        <com.blackstar.math4brain.TrackProgressView
            android:id="@+id/trackProgressView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/shadow_banner" />

    </LinearLayout>

</RelativeLayout>
