<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f1f0fe">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:id="@+id/buttonLeft"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:src="@drawable/left"
            android:scaleType="fitCenter"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:id="@+id/buttonRight"
            android:layout_weight="1"
            android:background="@drawable/button_menu"
            android:src="@drawable/right"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/resume_saved"
        android:id="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="#000000" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_above="@+id/buttonResume"
        android:id="@+id/levelsTable"
        android:layout_below="@+id/textView6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv1"
                android:layout_column="0"
                android:layout_margin="6dp"
                android:text="1"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv2"
                android:layout_column="1"
                android:layout_margin="6dp"
                android:text="2"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv3"
                android:layout_column="2"
                android:layout_margin="6dp"
                android:text="3"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv4"
                android:layout_column="0"
                android:layout_margin="6dp"
                android:text="4"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv5"
                android:layout_column="1"
                android:layout_margin="6dp"
                android:text="5"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv6"
                android:layout_column="2"
                android:layout_margin="6dp"
                android:text="6"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv7"
                android:layout_column="0"
                android:layout_margin="6dp"
                android:text="7"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv8"
                android:layout_column="1"
                android:layout_margin="6dp"
                android:text="8"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv9"
                android:layout_column="2"
                android:layout_margin="6dp"
                android:text="9"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv10"
                android:layout_column="0"
                android:layout_margin="6dp"
                android:text="10"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv11"
                android:layout_column="1"
                android:layout_margin="6dp"
                android:text="-"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:enabled="false"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_lv12"
                android:layout_column="2"
                android:layout_margin="6dp"
                android:text="-"
                android:textSize="25sp"
                android:layout_gravity="top"
                android:enabled="false"
                android:textColor="#EEEEEE"
                android:background="@drawable/button3_menu" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resume"
        android:id="@+id/buttonResume"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button3_menu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#EEEEEE"
        android:textSize="20sp" />

</RelativeLayout>